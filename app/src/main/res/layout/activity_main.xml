<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="34,5 *"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:id="@+id/tempEquation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="34,5*2"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:id="@+id/equasionField"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="69"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="45dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:id="@+id/resultField"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:gravity="center"
                android:text="C"
                android:textAlignment="center"
                android:textColor="@color/numberFontColor"
                android:textSize="@dimen/btnTextSize"
                android:onClick="clearOnClick"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="( )"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addBrackets"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="%"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addProcentage"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="@string/divideSymbol"
                android:textAlignment="center"
                android:textSize="40dp"
                android:fontFamily="@font/computomonospace"
                android:gravity="center"
                android:onClick="addDevition"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="7"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addSeven"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="8"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addEight"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="9"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addNine"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="@string/multiSymbol"
                android:textAlignment="center"
                android:textSize="30dp"
                android:gravity="center"
                android:onClick="addMulti"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="4"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addFour"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="5"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addFive"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="6"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addSix"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="-"
                android:textAlignment="center"
                android:textSize="30dp"
                android:gravity="center"
                android:onClick="addSubs"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="1"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addOne"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="2"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addTwo"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="3"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addThree"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="+"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addAddition"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="+/-"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="changeNegativity"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addZero"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text=","
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="addComma"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:textColor="@color/numberFontColor"
                android:text="="
                android:textAlignment="center"
                android:textSize="@dimen/btnTextSize"
                android:gravity="center"
                android:onClick="calculateOnClick"/>

        </LinearLayout>



    </LinearLayout>






</LinearLayout>